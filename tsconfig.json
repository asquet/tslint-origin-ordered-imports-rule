{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "lib": [
      "es6",
      "es2017.string",
      "es2017.object",
      "es2016.array.include",
      "es2015.iterable"
    ],
    "mapRoot": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir":  "dist/",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}